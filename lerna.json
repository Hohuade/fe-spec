{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "npmClient": "npm",
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "package-lock.json",
        "yarn.lock",
        "pnpm-lock.yaml"
      ],
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*"
  ]
}